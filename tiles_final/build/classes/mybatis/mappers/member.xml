<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Config 3.0//EN"
  "http://mybastis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mapper.member">
	<resultMap id="memberMap" type="memberCopyVO">
		<id property="userId" column="id"></id>
		<result property="password" column="pwd"></result>
	</resultMap>


	<select id="idCheck" resultType="java.lang.Integer" parameterType="java.lang.String">
		<![CDATA[
			SELECT COUNT(*) FROM book_user WHERE user_id = #{id}
		]]>
	</select>
	
	
	<select id="login" resultType="java.lang.Integer"  parameterType="memberCopyVO">
		<![CDATA[
			SELECT COUNT(*) FROM user WHERE id = #{userId} AND pwd = #{password}
		]]>
	</select>	
</mapper>